@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!--NAVIGATION-->

<nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-dark border-bottom shadow-lg bg-body mb-3 p-4">
    <div class="container-fluid">
        <picture class="p-1">
            <source srcset="~/images/logofolketshus50x50.png" type="image/png" />
            <img src="~/images/logofolketshus50x50.jpg" alt="logo for Folkets Hus" />
        </picture>
        <a class="navbar-brand text-white" style="font-size: 18px;" asp-area="" asp-controller="Home" asp-action="Index">Folkets Hus | Lövånger</a>
        <button class="navbar-toggler bg-white" name="Toggle navigation" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" id="navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse justify-content-between text-center">
            <ul class="navbar-nav flex-grow-1 mx-5">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="UserWorkout" asp-action="Index">Träningspass</a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="AdminWorkout" asp-action="Index">Hantera träningspass</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="AdminBooking" asp-action="Index">Hantera bokningar</a>
                    </li>
                }
                @if (User.IsInRole("Member"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="UserBooking" asp-action="Index">Mina Bokningar</a>
                    </li>
                }
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index"
                           title="Manage">Mitt konto</a>
                    </li>
                }
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>
